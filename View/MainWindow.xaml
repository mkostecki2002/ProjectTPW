<Window
    x:Class="View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="av"
    Title="MainWindow"
    WindowState="Maximized"
    Background="Black"
    HorizontalContentAlignment="Center"
    VerticalContentAlignment="Center">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Panel z kontrolkami -->
        <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,10,0,10">
            <Label Content="Wprowadź liczbę kulek" Foreground="White" Margin="0,0,0,10"/>
            <TextBox Text="4" Width="120" Margin="0,0,0,10"/>
            <Button Content="Uruchom" Width="100" Height="30"/>
        </StackPanel>

        <!-- Wyświetlanie kulek -->
        <Border Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="DarkGray" BorderThickness="1">
            <ItemsControl ItemsSource="{Binding Balls}">
                <!-- Ustawiamy panel jako Canvas -->
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas Width="800" Height="600" Background="DarkGreen" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <!-- Ustawiamy jak wyglądają pojedyncze kulki -->
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Ellipse Width="{Binding Radius}" Height="{Binding Radius}"
                                 Fill="Red"
                                 Canvas.Left="{Binding X}"
                                 Canvas.Top="{Binding Y}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>
    </Grid>
</Window>
