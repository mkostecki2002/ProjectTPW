<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="View.MainWindow"
        WindowState="Maximized"
        Title="MainWindow" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="Black" av:DesignHeight="615.71" av:DesignWidth="965.5" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,10,0,10" >
            <Label Content="Wprowadź liczbę kulek" Foreground="White" Margin="0,0,0,10" />
            <Slider Width="120" Margin="0,0,0,10" />
            <Button Content="Uruchom" Width="100" Height="30" />
        </StackPanel>

        <Border Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="DarkGray" BorderThickness="1">
            <Canvas Name="BallCanvas" Width="800" Height="450" Background="DarkGreen">
                <ItemsControl ItemsSource="{Binding Balls}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Ellipse Width="{Binding Radius}" Height="{Binding Radius}" 
                                 Fill="Red" 
                                 Canvas.Left="{Binding X}" 
                                 Canvas.Top="{Binding Y}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Canvas>
        </Border>
    </Grid>
</Window>